<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drink__category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="coffee.prototype.android.cleandrinksapplication.DrinkCategory">


    <android.support.v7.widget.CardView
        android:id="@+id/alcohol_category_card"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/alcohol_background_category_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/accessibility_label_for_alcohol_image"
            android:scaleType="fitXY"
            android:src="@drawable/graphics_alchol_cover" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/alcohol_text_below_category"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/alcohol_category_card"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/splash_background">

        <TextView
            android:id="@+id/alcohol_heading"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/alcohol_category_name"

            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/caffeine_category_card"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alcohol_text_below_category"
        android:layout_gravity="center"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/caffeine_background_category_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/accessibility_label_for_caffeine_image"
            android:scaleType="fitXY"
            android:src="@drawable/coffee_maker" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/caffeine_text_below_category"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/caffeine_category_card"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color">

        <TextView
            android:id="@+id/caffeine_heading"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/caffeine_category_name"

            />

    </android.support.v7.widget.CardView>


</RelativeLayout>
