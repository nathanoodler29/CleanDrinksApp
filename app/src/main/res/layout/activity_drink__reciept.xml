<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_drink__reciept"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="coffee.prototype.android.cleandrinksapplication.DrinkRecipt">


    <android.support.v7.widget.CardView
        android:id="@+id/card_alochol_container"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color">



        <TextView
            android:id="@+id/textSeparator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/Heading_font"
            android:text="Today"
             />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/inner_card"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="55dp"

        android:layout_marginTop="14dp"
        android:layout_below="@+id/card_alochol_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        card_view:cardBackgroundColor="@android:color/darker_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_font_non_bold"
            android:text="x2 Espressos"
            android:layout_gravity="center_horizontal"

            />




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="55dp"

        android:id="@+id/cardView"
        android:layout_below="@+id/inner_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        card_view:cardBackgroundColor="@android:color/darker_gray">

    >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_font_non_bold"
            android:text="x5 Green Tea"
            android:layout_gravity="center_horizontal"

            />




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="55dp"

        android:id="@+id/achol"
        card_view:cardBackgroundColor="@android:color/holo_blue_light"


        android:layout_below="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_font_non_bold"
            android:text="x11 Beers"
            android:layout_gravity="center_horizontal"

            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="55dp"

        android:id="@+id/secondwhiskey"
        card_view:cardBackgroundColor="@android:color/holo_blue_light"


        android:layout_marginTop="16dp"
        android:layout_below="@+id/achol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_font_non_bold"
            android:text="x15 Double Whiskey "
            android:layout_gravity="center_horizontal"

            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/container_yesturday"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="40dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/secondwhiskey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <TextView
            android:id="@+id/text_sep_day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/Heading_font"
            android:text="Yesturday"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="55dp"

        android:id="@+id/wine_example"
        card_view:cardBackgroundColor="@android:color/holo_blue_light"


        android:layout_marginTop="17dp"
        android:layout_below="@+id/container_yesturday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading_font_non_bold"
            android:text="x5 Wines"
            android:layout_gravity="center_horizontal"

            />

    </android.support.v7.widget.CardView>

</RelativeLayout>
