<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_achievement_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="coffee.prototype.android.cleandrinksapplication.achievement_gallery">

<!--https://developers.google.com/games/services/android/achievements-->


    <android.support.v7.widget.CardView
        android:id="@+id/goal_heading_card"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center_horizontal"
        card_view:cardBackgroundColor="@color/forestGreen">


        <ImageView
            android:id="@+id/goal_image_heading"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/goal_gold_medal_image_content_description"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/achievement_activity_banner_image" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/achievement_banner"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/goal_heading_card"
        android:foregroundGravity="center_horizontal"
       >


        <TextView
            android:id="@+id/goal_parent_heading"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp"
            android:text="@string/achivement_card_heading_text"
            android:textSize="30sp"

            />

        <TextView
            android:id="@+id/goal_paragraph_text"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text"
            android:layout_gravity="center_horizontal"
            android:paddingTop="90dp"
            android:text="@string/achivement_card_sub_heading_text"
            android:textSize="20sp"

            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/achievement"
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:foregroundGravity="center_horizontal"
        card_view:cardBackgroundColor="@color/lightGrey"

        android:layout_marginTop="11dp"
        android:layout_below="@+id/achievement_banner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/achievement_title"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text"
            android:layout_gravity="start"
            android:text="@string/achivement_card_name_water_god"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="5dp"


            />

        <TextView
            android:id="@+id/achievement_description"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text"
            android:paddingTop="60dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-15dp"
            android:text="@string/achivement_card_name_water_god_description"
            android:textStyle="italic"
            android:textSize="18sp"

            />

        <ImageView
            android:id="@+id/achievement_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/goal_gold_medal_image_content_description"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/water_god" />




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/achievement_two"
        android:layout_width="400dp"
        android:layout_height="85dp"
        android:foregroundGravity="center_horizontal"
        card_view:cardBackgroundColor="@color/darkBlue"

        android:layout_marginTop="18dp"
        android:layout_below="@+id/achievement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/achievement_two_title"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text"
            android:layout_gravity="start"
            android:text="@string/achivement_card_name_fantastic_four_title"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="5dp"


            />

        <TextView
            android:id="@+id/achievement_two_description"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text"
            android:paddingTop="60dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-15dp"
            android:text="@string/achivement_card_name_fantastic_four_title"
            android:textStyle="italic"
            android:textSize="18sp"

            />

        <ImageView
            android:id="@+id/achievement_two_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/goal_gold_medal_image_content_description"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/fantastic_four_streak" />




    </android.support.v7.widget.CardView>
</RelativeLayout>
