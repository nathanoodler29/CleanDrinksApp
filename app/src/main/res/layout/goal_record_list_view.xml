<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/goal_list_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center_horizontal"

        >


        <TextView
            android:id="@+id/water_goal_record"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textSize="22sp"

            />


        <TextView
            android:id="@+id/end_time_record"
            style="@style/receipt_child_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:textSize="22sp"

            />


        <ImageView
            android:id="@+id/goal_icon"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_gravity="left"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/goal_target_image_content_description"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/goal_icon" />

        <CheckBox
            android:id="@+id/goal_checkbox"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="10dp" />

    </android.support.v7.widget.CardView>

</LinearLayout>