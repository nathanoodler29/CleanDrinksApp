<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drink_listing_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="coffee.prototype.android.cleandrinksapplication.DrinkListingPage">

    <android.support.v7.widget.CardView
        android:id="@+id/espresso_card"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"

        >

        <TextView
            android:id="@+id/espresso_card_title"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/espresso_heading" />

        <ImageView
            android:id="@+id/espresso_card_drink_image"
            android:layout_width="40dp"
            android:layout_height="89dp"

            android:layout_below="@+id/espresso_card"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/accessibility_label_for_espresso_cup_image"
            android:paddingTop="20dp"
            android:src="@drawable/espressocolor" />

        <include
            android:id="@+id/espresso_button_add"
            layout="@layout/card_layout_drink_listing_page_plus_button" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/frenchpress_card"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/french_press_card_title"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/french_press_heading" />

        <ImageView
            android:id="@+id/french_press_card_drink_image"
            android:layout_width="40dp"
            android:layout_height="89dp"
            android:layout_below="@+id/french_press_card_title"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/accessibility_label_for_french_press_image"
            android:paddingTop="20dp"
            android:src="@drawable/frenchpress" />

        <include
            android:id="@+id/long_drinks_add"
            layout="@layout/card_layout_drink_listing_page_plus_button" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/moka_pot_card"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/espresso_card"

        android:layout_marginTop="42dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/moka_pot_card_title"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="@string/moka_pot_heading" />

        <ImageView
            android:id="@+id/moka_pot_card_drink_image"
            android:layout_width="40dp"
            android:layout_height="89dp"

            android:layout_below="@+id/mokaPot"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/accessibility_label_for_moka_pot_image"
            android:paddingTop="20dp"
            android:src="@drawable/mokapot" />

        <include
            android:id="@+id/moka_drinks_add"
            layout="@layout/card_layout_drink_listing_page_plus_button" />
        <!-- Images found http://www.flaticon.com/search/2?word=coffee-->

    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_drink_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="+"

        >

    </android.support.design.widget.FloatingActionButton>


</RelativeLayout>
