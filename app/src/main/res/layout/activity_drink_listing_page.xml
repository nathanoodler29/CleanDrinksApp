<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drink_listing_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="coffee.prototype.android.cleandrinksapplication.DrinkListingPage">

    <android.support.v7.widget.CardView
        android:id="@+id/card_coffee_container"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"

        >

        <TextView
            android:id="@+id/espresso_card"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="Espresso" />

        <ImageView
            android:id="@+id/coffee_background"
            android:layout_width="40dp"
            android:layout_height="89dp"

            android:layout_below="@+id/espresso_card"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:src="@drawable/espressocolor" />

        <TextView
            android:id="@+id/description"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coffee_background"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:backgroundTint="@color/cardview_light_background"
            android:text="+"
            android:textAlignment="center" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_coffee_container_two"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/card_coffee_container"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/frenchpress_card"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="French Press" />

        <ImageView
            android:id="@+id/frenchpress"
            android:layout_width="40dp"
            android:layout_height="89dp"

            android:layout_below="@+id/frenchpress"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:src="@drawable/frenchpress" />

        <TextView
            android:id="@+id/description_two"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coffee_background"

            />

        <Button
            android:id="@+id/button3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:backgroundTint="@color/cardview_light_background"
            android:text="+"
            android:textAlignment="center" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/mokaPotCard"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_coffee_container"

        android:layout_marginTop="42dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/mokaPot"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="Moka Pot" />

        <ImageView
            android:id="@+id/mokapot"
            android:layout_width="40dp"
            android:layout_height="89dp"

            android:layout_below="@+id/mokaPot"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:src="@drawable/mokapot" />

        <TextView
            android:id="@+id/description_three"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moka_pot_card"

            />

        <Button
            android:id="@+id/button4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:backgroundTint="@color/cardview_light_background"
            android:text="+"
            android:textAlignment="center" />
        <!--Need to make colour compatible with older devices i.e background tint -->
        <!-- Promote code re-use for this, so define one tile and then use this https://developer.android.com/training/improving-layouts/reusing-layouts.html-->
        <!-- Images found http://www.flaticon.com/search/2?word=coffee-->

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/placeHolder"
        android:layout_width="140dp"
        android:layout_height="120dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"

        android:layout_alignTop="@+id/mokaPotCard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/placeHolder_text"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="2dp"
            android:text="Espresso" />

        <ImageView
            android:id="@+id/placeHolderImage"
            android:layout_width="40dp"
            android:layout_height="89dp"

            android:layout_below="@+id/espresso_card"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:src="@drawable/espressocolor" />

        <TextView
            android:id="@+id/placeHolderDescrption"
            style="@style/Heading_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeHolder"

            />

        <Button
            android:id="@+id/buttonPlaceHolder"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100dp"
            android:backgroundTint="@color/cardview_light_background"
            android:text="+"
            android:textAlignment="center" />


    </android.support.v7.widget.CardView>



    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:src="@drawable/plussymbol"

        >


    </android.support.design.widget.FloatingActionButton>


</RelativeLayout>
